<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FuIIScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!--启动图-->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@layout/splash_screen</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
    </style>



    <!--首页侧滑栏样式-->

    <style name="HomeTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/Primary</item>
        <item name="colorPrimaryDark">@color/PrimaryDark</item>
        <item name="colorAccent">@color/Accent</item>
    </style>


    <!--显示查询空闲教室的样式-->
        <style name="ClassroomInfoLabel">
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:textSize">14sp</item>
            <item name="android:padding">5dp</item>
        </style>

        <style name="ClassroomInfoContent" parent="ClassroomInfoLabel">
        </style>



</resources>
